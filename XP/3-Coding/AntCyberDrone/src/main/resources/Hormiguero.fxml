<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="UserInterface.Controllers.HormigueroController"
      spacing="15" alignment="CENTER" style="-fx-background-color: #1a1a1a; -fx-padding: 20;">

    <Label text="Gestionar Hormiguero Virtual" 
           style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #0099ff;"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="crearLarvaButton" text="Crear Larva" onAction="#handleCrearLarva" 
                style="-fx-font-size: 12; -fx-padding: 10; -fx-background-color: #0066cc; -fx-text-fill: #fff; -fx-cursor: hand;"/>
        <Separator orientation="VERTICAL"/>
        <Label text="Alimentar con:" style="-fx-text-fill: #fff; -fx-font-size: 11;"/>
        <ComboBox fx:id="alimentoComboBox" style="-fx-font-size: 11;"/>
        <Button fx:id="alimentarButton" text="Alimentar" onAction="#handleAlimentar" 
                style="-fx-font-size: 12; -fx-padding: 8; -fx-background-color: #00aa00; -fx-text-fill: #000; -fx-cursor: hand;"/>
        <Button fx:id="gestionarSoldadosButton" text="Gestionar Soldado" onAction="#handleGestionarSoldados" 
                style="-fx-font-size: 12; -fx-padding: 8; -fx-background-color: #cc0000; -fx-text-fill: #fff; -fx-cursor: hand;"/>
        <Button fx:id="volverButton" text="Volver" onAction="#handleVolver" 
                style="-fx-font-size: 12; -fx-padding: 8; -fx-background-color: #666; -fx-text-fill: #fff; -fx-cursor: hand;"/>
    </HBox>

    <Separator/>

    <TableView fx:id="hormigasTable" VBox.vgrow="ALWAYS" 
               style="-fx-control-inner-background: #0d0d0d; -fx-text-fill: #0099ff;">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" prefWidth="60"/>
            <TableColumn fx:id="tipoColumn" text="Tipo" prefWidth="100"/>
            <TableColumn fx:id="estadoColumn" text="Estado" prefWidth="100"/>
            <TableColumn fx:id="armamentoColumn" text="Armamento" prefWidth="200"/>
        </columns>
    </TableView>

    <Separator/>

    <Label fx:id="infoLabel" text="Selecciona una hormiga para ver detalles" 
           style="-fx-text-fill: #888; -fx-font-size: 11; -fx-wrap-text: true;"/>

</VBox>
