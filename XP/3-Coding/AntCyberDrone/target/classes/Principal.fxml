<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="UserInterface.Controllers.PrincipalController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #1a1a1a; -fx-padding: 30;">

    <Label text="Panel Principal - AntCyberDrone" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #0099ff;"/>

    <VBox spacing="15" alignment="CENTER" style="-fx-border-color: #333; -fx-border-width: 1; -fx-padding: 30; -fx-background-color: #0d0d0d; -fx-border-radius: 5;">

        <Button fx:id="cargarCSVButton" text="CARGAR CSV CON COORDENADAS" 
                onAction="#handleCargarCSV" 
                style="-fx-font-size: 14; -fx-padding: 15; -fx-background-color: #0066cc; -fx-text-fill: #fff; -fx-font-weight: bold; -fx-border-radius: 3; -fx-cursor: hand;" 
                minWidth="300" minHeight="60"/>

        <Separator/>

        <Button fx:id="hormigueroButton" text="GESTIONAR HORMIGUERO VIRTUAL" 
                onAction="#handleGestionarHormiguero" 
                style="-fx-font-size: 14; -fx-padding: 15; -fx-background-color: #cc0066; -fx-text-fill: #fff; -fx-font-weight: bold; -fx-border-radius: 3; -fx-cursor: hand;" 
                minWidth="300" minHeight="60"/>

        <Separator/>

        <Button fx:id="cerrarSesionButton" text="CERRAR SESION" 
                onAction="#handleCerrarSesion" 
                style="-fx-font-size: 12; -fx-padding: 10; -fx-background-color: #aa0000; -fx-text-fill: #fff; -fx-font-weight: bold; -fx-border-radius: 3; -fx-cursor: hand;" 
                minWidth="300" minHeight="40"/>

    </VBox>
</VBox>
